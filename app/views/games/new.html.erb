<h1>New game</h1>

<div class=letters_box>
  <% @letters.each do |letter| %>
    <div class=letter><%= letter %></div>
  <% end %>
</div>

<p>What is the longest word you can find?</p>

<form action="/score" class=form>
  <input type="text" name="guess" class='bar'>
  <input type="submit" value="Play" class='btn'>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :start, @start %>
</form>
